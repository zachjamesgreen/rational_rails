<h1><%= @story.name %></h1>
<a href="/story/<%= @story.id %>/edit">Update</a>
<%= link_to 'Delete', "/story/#{@story.id}", method: :delete, data: {confirm: 'Are your sure?'} %>
<ul>
  <li>Likes: <%= @story.likes %></li>
  <li>Published: <%= @story.published %></li>
  <li>Author: <%= @story.author.name %></li>
</ul>
