<form action="/author/<%= @author.id %>/story" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label for="name">Name</label>
  <input type="text" id="name" name="story[name]"><br/>
  <label for="published">Published</label>
  <input type="checkbox" id="published" name="story[published]"><br/>
  <input type="submit">
</form>
