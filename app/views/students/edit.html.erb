<h2>Edit Student <%=@student.name%></h2>

<form action='' method='POST'>
  <input type='hidden' name='authenticity_token' value='<%=form_authenticity_token%>'>
  <input type='hidden' name='_method' value='PATCH' />
  <label for='student[name]'>Student Name</label>
  <input type='text' name='student[name]' value='<%=@student.name%>'/><br />
  <label for='student[age]'>Age</label>
  <input type='text' name='student[age]' value='<%=@student.age%>'/><br />
  <label for='student[degree]' name='student[degree]'>Student's Degree</label>
  <input type='text' name='student[degree]' value='<%=@student.degree%>'/><br />
  <label for='student[is_alumni]'>Has Student Graduate?</label>
  <select name='student[is_alumni]'>
    <option value='false'>No</option>
    <option value='true'>Yes</option>
  </select><br />
  <input type='submit' value='Update'/>
</form>
